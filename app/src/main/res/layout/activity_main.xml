<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/layout"
        android:background="@drawable/gradient_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ClassePrincipal.MainActivity">
    <Button
            android:text="@string/pressione_para_lan_ar_horas"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:id="@+id/id_buttonWeb"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/designbotaobranco"
            android:backgroundTintMode="screen"
            android:textStyle="bold"
            android:textAlignment="center"
            android:freezesText="false"
            android:fontFamily="@font/arimo"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.494"
            app:layout_constraintVertical_bias="0.916"/>
    <Button
            android:text="@string/lembrar_para_lan_ar_horas"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:id="@+id/id_botaoalarme"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:layout_marginStart="8dp"
            android:background="@drawable/designbotaobranco"
            android:textStyle="bold"
            android:fontFamily="@font/arimo"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/id_buttonWeb"
            app:layout_constraintVertical_bias="0.929"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.494"/>

    <ImageView
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:src="@drawable/c"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.494"
            app:layout_constraintVertical_bias="0.171"/>


</androidx.constraintlayout.widget.ConstraintLayout>